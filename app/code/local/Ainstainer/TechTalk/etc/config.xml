<?xml version="1.0"?>
<config>
    <modules>
        <techtalk>
            <version>1.0.0</version>
        </techtalk>
    </modules>
    <global>
        <models>
            <techtalk>
                <class>Ainstainer_TechTalk_Model</class>
            </techtalk>
        </models>
        <blocks>
            <techtalk>
                <class>Ainstainer_TechTalk_Block</class>
            </techtalk>
        </blocks>
        <helpers>
            <techtalk>
                <class>Ainstainer_TechTalk_Helper</class>
            </techtalk>
        </helpers>
    </global>
    <frontend>
        <routers>
            <magetalk>
                <use>standard</use>
                <args>
                    <module>Ainstainer_TechTalk</module>
                    <frontName>magetalk</frontName>
                </args>
            </magetalk>
        </routers>
        <layout>
            <updates>
                <techtalk>
                    <file>techtalk.xml</file>
                </techtalk>
            </updates>
        </layout>
    </frontend>
</config>